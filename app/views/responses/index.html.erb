<h1>Listing Responses</h1>

<table>
  <thead>
    <tr>
      <th class="response_table_header">Survey ID</th>
      <th class="response_table_header">Respondent ID</th>
      <th class="response_table_header">State</th>
      <th class="response_table_header">Year of birth</th>
      <th class="response_table_header">Race</th>
      <th class="response_table_header">Gender</th>
      <th class="response_table_header">Voter Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td class="response_table_data"><%= response.survey_id %></td>      
        <td class="response_table_data"><%= response.respondent_id %></td>
        <td class="response_table_data"><%= response.state %></td>
        <td class="response_table_data"><%= response.date_of_birth %></td>
        <td class="response_table_data"><%= response.race %></td>
        <td class="response_table_data"><%= response.gender %></td>
        <td class="response_table_data"><%= response.voter_status %></td>
        <td class="response_table_link"><%= link_to 'Show', response %></td>
        <td class="response_table_link"><%= link_to 'Edit', edit_response_path(response) %></td>
        <td class="response_table_link"><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Response', new_response_path %></p>

<br>

<h3>Import Survey Responses</h3>
<%= form_tag import_responses_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
