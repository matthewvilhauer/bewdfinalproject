<h1>Questions Index</h1>

<div class="search">
  <%= form_tag "/", method: "GET" do %>
    <%= text_field_tag :q %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div class="article">
  <ol class="questions">
  <% @questions.each do |question| %>
    <li>
      <li>Survey ID: <%= question.survey_id %> || Question ID: <%= question.id %>  ||  <%= question.inquiry %></li>
      <ol class="answers">
        <% question.answers.each do |answer| %>
          <li><%= answer.content %> || ID: <%= answer.id %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
  </ol>
</div>